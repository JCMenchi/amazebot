{
    "description": "Simple Maze examples",
    "version": "0.1",
    "mazes": {
        "1": {
            "id": 1,
            "name": "VeryBasic",
            "description": "Very Basic 4x4",
            "configuration": {
                "maze": [
                    "+0+1+2+3+",
                    "0 | | | |",
                    "+-+-+-+-+",
                    "x     | |",
                    "+-+-+ +-+",
                    "2 | |   X",
                    "+-+-+-+-+",
                    "3 | | | |",
                    "+-+-+-+-+"
                ],
                "entry": {
                    "r": 1,
                    "c": -1
                },
                "exit": {
                    "r": 1,
                    "c": 4
                }
            },
            "solution": {
                "maze": [
                    "+-+-+-+-+",
                    "| | | | |",
                    "+-+-+-+-+",
                    "xbbbbb| |",
                    "+-+-+b+-+",
                    "| | |bbbX",
                    "+-+-+-+-+",
                    "| | | | |",
                    "+-+-+-+-+"
                ]
            }
        },
